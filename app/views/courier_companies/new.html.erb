<div class="span11">
  <div class="heading">
    Add new courier company
  </div>
  <%= form_for @cc, url: seller_courier_companies_path, action: :post do |f|%>
    <div class="field-box">
      <div class = "control-group">
        <%= f.label :name , :class => 'control-label'%>
        <div class = "controls">
          <%= f.text_field :name, :class => 'text_field'%>
        </div>
      </div>
    </div>
    <%= f.submit %>
  <% end %>
</div>